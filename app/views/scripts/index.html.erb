<h2>Scripts</h2>
<% Script.all.each do |script| %>
	<div class="scriptContainer">
		<h3><%= script.name %></h3>
		<%= link_to 'Edit', edit_script_path(script) %>
		<%= link_to 'Execute', execute_script_path(script), remote: true %>
		<%= button_to 'X', { action: 'destroy', id: script.id }, method: :delete, remote: true,
			data: { confirm: "Are you sure you want to delete this script?", disable_with: "Deleting" },
			class: 'deleteScript' %>
	</div>
<% end %>
